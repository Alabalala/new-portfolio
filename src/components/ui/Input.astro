---
const {
  type = "text",
  placeholder,
  value,
  onChange,
  required = false,
  inputName,
  id,
} = Astro.props;
---

{
  type === "textarea" ? (
    <textarea
      id={id}
      name={inputName}
      class={`bg-on-secondary p-2 shadow-(--box-shadow-primary) placeholder:text-sm md:placeholder:text-xl md:p-4`}
      placeholder={placeholder}
      value={value}
      onchange={onChange}
      required={required}
      minlength="10"
    />
  ) : (
    <input
      id={id}
      name={inputName}
      class={`bg-on-secondary p-2 shadow-(--box-shadow-primary) placeholder:text-sm md:placeholder:text-xl md:p-4`}
      type={type}
      placeholder={placeholder}
      value={value}
      onchange={onChange}
      required={required}
      minlength="4"
    />
  )
}

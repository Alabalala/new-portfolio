---
import Badge from "./Badge.astro";
import Link from "./Link.astro";
import Text from "./Text.astro";

const { project } = Astro.props;
const { Content } = await project.render();
---

<article class="bg-on-tertiary shadow-(--box-shadow-tertiary) max-w-[400px] h-auto">
  <div class="py-4" style={`background-color: ${project.data.color}`}>
    <img
      class="h-15 mx-auto"
      src={`/logos/${project.data.image}.webp`}
      alt={`Logo de ${project.data.title}`}
    />
  </div>
  <div class="bg-on-tertiary p-5 flex flex-col gap-5">
    <h3 class="font-bebas text-2xl md:text-4xl">{project.data.title}</h3>
    <div class="flex flex-row flex-wrap gap-2">
      {
        project.data.tags?.map((tag: string) => {
          return <Badge text={tag} />;
        })
      }
    </div>

    <div class="md:text-xl md:leading-8 space-y-5">
      <Content entry={project} />
    </div>
    <div class="flex justify-center">
      <Link text="Visit website" href={project.data.link} variant="secondary" />
    </div>
  </div>
</article>
